<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %>
    <%= link_to ' Edit Pin', edit_pin_path(@pin), html_options = {class:"fa fa-pencil"} %>
  </p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    
    <%= link_to "#{@pin.url}", @pin.url, html_options = {target:"_blank", class:"url"} %>
    <p>
      <% if @pin.image.url.nil? %>
              <%= image_tag('rails-logo-thumbnail.png') %>
            <% else  %>
           <img src="<%= @pin.image.url(:medium) %>">    
            <% end %>
     
      </p>
</div>
<%= link_to repin_path(pin), class: "btn btn-default", method: "post" do %>
  <icon here?>
  Repin!
<% end %>
<br/>
 
<a href="/">
  <i class="fa fa-backward"></i>
  Back to Home
</a>
